{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/builder/(.*)",
      "dest": "/api/index.js",
      "headers": {
        "Content-Security-Policy": "frame-ancestors 'self' https://*.myshopify.com https://*.shopify.com; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.shopify.com https://cdnjs.cloudflare.com;",
        "X-Frame-Options": "ALLOWALL"
      }
    },
    {
      "src": "/app",
      "dest": "/api/index.js"
    },
    {
      "src": "/dashboard",
      "dest": "/api/index.js"
    },
    {
      "src": "/dashboard/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/pages",
      "dest": "/api/index.js"
    },
    {
      "src": "/pages/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/templates",
      "dest": "/api/index.js"
    },
    {
      "src": "/templates/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/settings",
      "dest": "/api/index.js"
    },
    {
      "src": "/settings/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/help",
      "dest": "/api/index.js"
    },
    {
      "src": "/help/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/pages",
      "dest": "/api/index.js"
    },
    {
      "src": "/install",
      "dest": "/public/install.html"
    },
    {
      "src": "/editor",
      "dest": "/public/editor.html"
    },
    {
      "src": "/analytics",
      "dest": "/public/analytics.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "SHOPIFY_APP_URL": "https://kingsbuilder.vercel.app",
    "FRONTEND_URL": "https://kingsbuilder.vercel.app",
    "CORS_ORIGIN": "https://admin.shopify.com,https://*.myshopify.com,https://kingsbuilder.vercel.app",
    "COOKIE_SECURE": "true",
    "COOKIE_SAME_SITE": "none"
  }
}
